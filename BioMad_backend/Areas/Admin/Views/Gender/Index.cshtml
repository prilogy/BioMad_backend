@using BioMad_backend.Areas.Admin.Helpers
@model IPagedList<BioMad_backend.Entities.Gender>

@{
    ViewData["Title"] = "Пол";
}

@Html.EntityIndexHeader("Пол", ViewData["searchString"] as string)

@Html.Table(Model, x =>
{
    x = x.Localize(Culture.Ru);
    return new Dictionary<string, string>
    {
        { "Название", x.Content?.Name }
    };
})

@Html.PagedListPager(Model, page => Url.Action("Index", new { page, searchString = ViewData["searchString"] }),
    new PagedListRenderOptions
    {
        LiElementClasses = new string[] { "page-item" },
        PageClasses = new string[] { "page-link" }
    })